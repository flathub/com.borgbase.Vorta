{
    "app-id": "com.borgbase.Vorta",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "vorta",
    "finish-args": [
        "--socket=fallback-x11",
        "--share=ipc",
        "--socket=wayland",
        "--device=dri",
        "--share=network",
        "--filesystem=host",
        "--filesystem=~/.var/app/",
        "--own-name=org.kde.*",
